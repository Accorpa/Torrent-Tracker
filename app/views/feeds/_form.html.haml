= form_for feed do |f|
  -if feed.errors.any?
    #error_explanation
      %h2= "#{pluralize(feed.errors.count, "error")} prohibited this feed from being saved:"
      %ul
        - feed.errors.full_messages.each do |msg|
          %li= msg

  %p
    = f.label :name, "Name"
    = f.text_field :name
  %p
    = f.label :url, "URL"
    = f.text_field :url
  .actions
    = f.submit 'Add'
